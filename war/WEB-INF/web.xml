<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"

	version="2.5">
	<filter>
		<filter-name>myauth</filter-name>
		<filter-class>net.devrieze.chatterbox.server.AuthFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>myauth</filter-name>
		<url-pattern>/x/Chatterbox.html</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>myauth</filter-name>
		<url-pattern>/x/</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>myauth</filter-name>
		<url-pattern>/x/chat/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>myauth</filter-name>
		<url-pattern>/x/chat</url-pattern>
	</filter-mapping>

    <servlet>
        <description>AtmosphereServlet</description>
        <servlet-name>AtmosphereServlet</servlet-name>
        <servlet-class>org.atmosphere.cpr.AtmosphereServlet</servlet-class>
        <init-param>
            <!-- prevent deadlocks -->
            <param-name>org.atmosphere.disableOnStateEvent</param-name>
            <param-value>true</param-value>
        </init-param>
        <!--        <init-param>
            <param-name>org.atmosphere.useWebSocket</param-name>
            <param-value>true</param-value>
        </init-param>-->
        <!--<init-param>
            <param-name>org.atmosphere.useNative</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>org.atmosphere.useBlocking</param-name>
            <param-value>true</param-value>
        </init-param>-->
        <load-on-startup>1</load-on-startup>
        <!--Uncomment if you want to use Servlet 3.0 Async Support-->
    </servlet>


	<servlet>
		<description>MeteorServlet</description>
		<servlet-name>MeteorServlet</servlet-name>
		<servlet-class>org.atmosphere.cpr.MeteorServlet</servlet-class>
		<init-param>
			<param-name>org.atmosphere.servlet</param-name>
			<param-value>net.devrieze.chatterbox.server.ChatterboxServlet</param-value>
		</init-param>
		<init-param>
			<param-name>org.atmosphere.cpr.broadcasterCacheClass</param-name>
			<param-value>org.atmosphere.cache.HeaderBroadcasterCache</param-value>
		</init-param>
		<load-on-startup>0</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>chatServlet</servlet-name>
		<servlet-class>net.devrieze.chatterbox.server.ChatterboxServlet</servlet-class>
	</servlet>

	<!-- servlet-mapping>
	  <servlet-name>greetServlet</servlet-name>
	  <url-pattern>/chatterbox/greet</url-pattern> 
	</servlet-mapping -->

	<!-- <servlet-mapping>
		<servlet-name>AtmosphereServlet</servlet-name>
		<url-pattern>/chat/connect</url-pattern>
	</servlet-mapping>-->
  <servlet-mapping>
    <servlet-name>AtmosphereServlet</servlet-name>
    <url-pattern>/gwtcomet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>MeteorServlet</servlet-name>
    <url-pattern>/comet</url-pattern>
  </servlet-mapping>

	<servlet-mapping>
		<servlet-name>chatServlet</servlet-name>
		<url-pattern>/chat</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>chatServlet</servlet-name>
		<url-pattern>/chat/*</url-pattern>
	</servlet-mapping>

	<!-- servlet-mapping>
	<servlet-name>chatServlet</servlet-name>
	  <url-pattern>/Chatterbox.html</url-pattern> 
	</servlet-mapping -->

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>Chatterbox.html</welcome-file>
	</welcome-file-list>
	<resource-ref>
		<description>User account database</description>
		<res-ref-name>jdbc/webauth</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<resource-ref>
		<description>Chatbox database</description>
		<res-ref-name>jdbc/chatbox</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>

	<security-role>
		<role-name>admin</role-name>
	</security-role>

	<security-constraint>

		<web-resource-collection>
			<web-resource-name>Chatbox security</web-resource-name>
			<url-pattern>/*</url-pattern>
			<http-method>POST</http-method>
			<http-method>GET</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>

	</security-constraint>
</web-app>
