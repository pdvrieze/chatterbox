<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <ui:style type='net.devrieze.chatterbox.client.ChatterboxUI.MyStyle'>

    /* Top of the page */      
    
    #header {
    	position: fixed;
    	top: 0em;
    	left: 0em;
    	right: 0em;
      height: 3em;
      text-align: center;
      background-color: white;
      margin-left: 1ex;
      margin-right: 1ex;
      border-bottom: 1px solid black;
    }
    .title {
      background-color: #c0c0ff;
    }
    
    #headborder {
      border: 1px solid black;
      border-top: none;
   	}
    
    #headerborder > div {
      padding-top:0.25em;
      padding-bottom:0.25em;
    }
    .errorLabel {
    	 text-color: #404040;
    	 height: 1.5em;
    }
    
    /* Middle of the page */
    
    #main {
    	margin-top: 3em;
/*    	padding-top: 3em;*/
    	margin-bottom: 3em;
    }
    #backgroundPanel {
    	position: fixed;
    	top: 2.5em;
    	left: 1ex;
    	right: 1ex;
    	bottom: 3em;
      border: 1px solid black;
      background-color: #ffffe0;
      z-index: -1;
   	}
    
    .outputBox {
    	margin: 1ex;
    	padding-top: 0.5ex;
    	padding-left: 1px;
    	padding-right: 1px;
    }
    .outputBox > div {
    	border-bottom: 1px dotted gray;
    	padding-left: 1ex;
    	padding-right: 1ex;
    	padding-bottom: 0.5ex;
    	padding-top: 0.5ex;
    }
    
    @external even;
    
    .outputBox > div.even {
    	background-color: #c0c0ff;
    }

    /* Bottom of the page */      
   	
   	#footer {
   		position: fixed;
   		bottom: 0em;
      right: 1ex;
      left: 1ex;
      height: 3em;
   		background-color: white;
   		border-top: 1px solid black;
  	}
  	#footer > div {
  		margin-top: 0.25em;
  		border: 1px solid black;
      padding-right: 7em;
 		}
    
    .myTextBox {
    	width: 100%;
    	height: 2em;
    	padding: 0px;
/*      border: 1px solid black;*/
    }
    @external sendButton;
    #footer > div > .sendButton {
      float: right;
      padding: 0em;
      width: 0px;
    }
    .sendButton > .sendButton {
      width: 6.5em;
      height: 2em;
      margin-top: 0.2em;
      margin-left: 0.25em;
    }
    #footer > div > div {
    	padding-right: 0.25em;
    }
    
    .errorLabel {
	    overflow: hidden;
	  }
    
  </ui:style>
  <g:HTMLPanel>
    <div id="main">
       <div id="backgroundPanel"></div>
       <div class="{style.outputBox}" ui:field='outputdiv'></div>
    </div>
     <div id="header">
       <div id="headborder">
         <div class="{style.title}">ChatterBox (<a ui:field='logoutRef' href="/chat/logout">logout</a>)<span style="float:right"><g:Button text="disable channel" ui:field='toggleChannel'></g:Button></span></div>
         <div id="errorLabelContainer"><g:Label ui:field='errorLabel' addStyleNames="{style.errorLabel}"></g:Label></div>
       </div>
     </div>
    <div id="footer">
      <div>
        <div class="{style.sendButton}"><g:Button addStyleNames="{style.sendButton}" text="send" ui:field='sendButton'></g:Button></div>
	      <div><g:TextBox addStyleNames="{style.myTextBox}" ui:field='textBox' focus="true">initial text</g:TextBox></div>
      </div>
    </div>
  </g:HTMLPanel>
  
